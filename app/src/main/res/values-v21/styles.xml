<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent_light</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="pinViewStyle">@style/PinWidget.PinView</item>
    </style>


    <style name="AppTheme" parent="Base.AppTheme" >
        <item name="android:textColorPrimary">@color/primary_text</item>
    </style>


    <style name="AppTheme.Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar.Overflow</item>
    </style>


    <style name="AppTheme.EditText.Item.White" parent="AppTheme.EditText.Item">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/pale_grey</item>
    </style>

</resources>