<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="addItemViewModel"
            type="swapp.items.com.swappify.controllers.additem.viewmodel.AddItemViewModel" />
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsingLayout"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:contentScrim="?colorPrimary"
                app:expandedTitleMarginBottom="94dp"
                app:expandedTitleTextAppearance="@style/CollapsingTextAppearance.Inverse"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:title="Title">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/material_flat"
                    android:tint="#BB3E50B4" />


            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:requiresFadingEdge="vertical"
            android:scrollbars="none"
            app:behavior_overlapTop="78dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/cardview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="4dp"
                    app:cardPreventCornerOverlap="true">


                        <RelativeLayout
                            android:id="@+id/sliderView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/dimen_110"
                            android:clipToPadding="false"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/publisherKey"
                                style="@style/AppTheme.Widget.TextView.Primary.Bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_16"
                                android:text="@string/str_publisher" />

                            <TextView
                                android:id="@+id/publisherValue"
                                style="@style/AppTheme.Widget.TextView.Secondary.Regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_8"
                                android:layout_marginRight="@dimen/dimen_8"
                                android:layout_toRightOf="@id/publisherKey"
                                android:text="1Activision" />

                            <TextView
                                android:id="@+id/releaseDateKey"
                                style="@style/AppTheme.Widget.TextView.Primary.Bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/publisherKey"
                                android:layout_marginLeft="@dimen/dimen_16"
                                android:layout_marginTop="@dimen/dimen_10"
                                android:text="@string/str_release_date" />

                            <TextView
                                android:id="@+id/releaseDateValue"
                                style="@style/AppTheme.Widget.TextView.Secondary.Regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/publisherValue"
                                android:layout_marginLeft="@dimen/dimen_8"
                                android:layout_marginRight="@dimen/dimen_8"
                                android:layout_marginTop="@dimen/dimen_10"
                                android:layout_toRightOf="@id/releaseDateKey"
                                android:text="12 April 2017" />


                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/summary"
                                style="@style/AppTheme.Widget.TextView.Secondary.Regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/releaseDateKey"
                                android:layout_marginBottom="@dimen/dimen_16"
                                android:layout_marginLeft="@dimen/dimen_16"
                                android:layout_marginRight="@dimen/dimen_8"
                                android:layout_marginTop="16dp"
                                android:fontFamily="sans-serif-light"
                                android:lineSpacingExtra="8dp"
                                android:text="@string/lorem"
                                android:textSize="16sp" />

                            <Button
                                android:id="@+id/nextButton"
                                style="@style/AppTheme.Button.Raised"
                                android:layout_below="@id/summary"
                                android:text="@string/str_next" />

                        </RelativeLayout>



                </android.support.v7.widget.CardView>


            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            android:elevation="8dp"
            android:src="@drawable/black_radius" />


        <android.support.constraint.ConstraintLayout
            android:id="@+id/anchorLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_180"
            android:baselineAlignBottom="true"
            app:layout_anchor="@id/cardview"
            app:layout_anchorGravity="top|left|end">


            <ImageView
                android:id="@+id/coverPage"
                android:layout_width="@dimen/dimen_140"
                android:layout_height="@dimen/dimen_180"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="16dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/london_flat" />

            <TextView
                android:id="@+id/name"
                style="@style/AppTheme.Widget.TextView.Primary.Bold.White"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_16"
                android:layout_marginRight="@dimen/dimen_8"
                android:layout_marginTop="48dp"
                android:gravity="center_vertical"
                android:text="Halo 2"
                android:textSize="@dimen/font_24"
                app:layout_constraintStart_toEndOf="@+id/coverPage"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/genreKey"
                style="@style/AppTheme.Widget.TextView.Primary.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_16"
                android:text="@string/str_genre"
                app:layout_constraintBottom_toBottomOf="@+id/developerKey"
                app:layout_constraintStart_toEndOf="@+id/coverPage"
                app:layout_constraintTop_toBottomOf="@+id/name" />

            <TextView
                android:id="@+id/genreValue"
                style="@style/AppTheme.Widget.TextView.Secondary.Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_8"
                android:layout_marginRight="@dimen/dimen_8"
                android:text="Shooter"
                app:layout_constraintBottom_toBottomOf="@+id/developerValue"
                app:layout_constraintStart_toEndOf="@+id/genreKey"
                app:layout_constraintTop_toBottomOf="@+id/name" />

            <TextView
                android:id="@+id/developerKey"
                style="@style/AppTheme.Widget.TextView.Primary.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/str_developer"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/genreKey"
                app:layout_constraintTop_toBottomOf="@+id/genreKey" />

            <TextView
                android:id="@+id/developerValue"
                style="@style/AppTheme.Widget.TextView.Secondary.Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_8"
                android:layout_marginRight="@dimen/dimen_8"
                android:layout_marginTop="8dp"
                android:text="Ubisoft"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/developerKey"
                app:layout_constraintTop_toBottomOf="@+id/genreValue" />


        </android.support.constraint.ConstraintLayout>


    </android.support.design.widget.CoordinatorLayout>

</layout>