<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="swapp.items.com.swappify.controllers.country.ui.CountryPickerFragment">

    <data>

        <variable
            name="androidViewModel"
            type="swapp.items.com.swappify.controllers.country.viewmodel.CountryPickerViewModel" />

        <variable
            name="toolbarConfig"
            type="swapp.items.com.swappify.controllers.configs.ToolbarConfiguration" />

        <variable
            name="recyclerViewConfig"
            type="swapp.items.com.swappify.controllers.configs.RecyclerViewConfiguration" />

        <variable
            name="emptyViewConfig"
            type="swapp.items.com.swappify.controllers.configs.EmptyViewConfiguration" />

        <variable
            name="errorViewConfig"
            type="swapp.items.com.swappify.controllers.configs.ErrorViewConfiguration" />

        <variable
            name="contentLoadingViewConfig"
            type="swapp.items.com.swappify.controllers.configs.ContentLoadingConfiguration"/>

    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbarLayout"
            layout="@layout/include_toolbar"
            bind:toolbarConfig="@{toolbarConfig}" />

        <include
            android:id="@+id/multiStateViewLayout"
            layout="@layout/include_multistate_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbarLayout"
            bind:contentLoadingViewConfig="@{contentLoadingViewConfig}"
            bind:emptyViewConfig="@{emptyViewConfig}"
            bind:errorViewConfig="@{errorViewConfig}"
            bind:recyclerViewConfig="@{recyclerViewConfig}"/>

    </RelativeLayout>

</layout>