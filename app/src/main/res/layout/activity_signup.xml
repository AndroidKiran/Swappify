<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    tools:context="swapp.items.com.swappify.controllers.signup.SignUpLoginActivity">

    <data>
        <variable
            name="viewModel"
            type="swapp.items.com.swappify.controllers.signup.viewmodel.SignUpLogInViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/include_code_validation"
            bind:viewModel="@{viewModel}"/>

        <include layout="@layout/include_phone_validation"
            bind:viewModel="@{viewModel}"/>

    </FrameLayout>

</layout>