<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <variable
            name="addItemViewModel"
            type="swapp.items.com.swappify.controllers.addgame.viewmodel.AddGameViewModel"/>

        <variable
            name="recyclerViewConfig"
            type="swapp.items.com.swappify.controllers.configs.RecyclerViewConfiguration"/>

        <variable
            name="contentLoadingBindingConfig"
            type="swapp.items.com.swappify.controllers.configs.ContentLoadingConfiguration"/>

        <variable
            name="emptyViewBindingConfig"
            type="swapp.items.com.swappify.controllers.configs.EmptyViewConfiguration"/>

        <variable
            name="errorViewBindingConfig"
            type="swapp.items.com.swappify.controllers.configs.ErrorViewConfiguration"/>
    </data>

    <swapp.items.com.swappify.components.SlidingRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_72"
        android:background="@color/window_background">

       <include
           android:id="@+id/multiStateViewLayout"
           layout="@layout/include_multistate"
           bind:recyclerViewConfig="@{recyclerViewConfig}"
           bind:contentLoadingBindingConfig="@{contentLoadingBindingConfig}"
           bind:emptyViewBindingConfig="@{emptyViewBindingConfig}"
           bind:errorViewBindingConfig="@{errorViewBindingConfig}"/>

    </swapp.items.com.swappify.components.SlidingRelativeLayout>

</layout>
