<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/illustratorIcon"
        android:layout_width="@dimen/dimen_256"
        android:layout_height="@dimen/dimen_256"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.489"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="54dp"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/title"
        style="@style/AppTheme.Widget.TextView.Primary.Bold"
        android:layout_marginTop="@dimen/dimen_20"
        android:text="TextView"
        android:textSize="@dimen/font_30"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/illustratorIcon" />

    <TextView
        android:id="@+id/desc"
        style="@style/AppTheme.Widget.TextView.Primary.Regular"
        android:layout_marginTop="@dimen/dimen_16"
        android:text="TextView"
        android:textSize="@dimen/font_18"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

</android.support.constraint.ConstraintLayout>


