<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="swapp.items.com.swappify.controllers.signup.viewmodel.SignUpLogInViewModel" />

        <variable
        name="onClickCallBack"
        type="swapp.items.com.swappify.controllers.signup.ui.ISignUpLogInNavigator" />

        <variable
            name="onTextChangeCallBack"
            type="swapp.items.com.swappify.components.TextChangeListener"/>

    </data>


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorPrimary"
        android:clickable="true"
        android:focusable="true">


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imageView"
            style="@style/AppTheme.ImageView.icon_96"
            android:layout_marginBottom="@dimen/dimen_60"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/btn_color_white_full_normal" />


        <TextView
            android:id="@+id/textView3"
            style="@style/AppTheme.Widget.TextView.Primary.Bold.White"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dimen_30"
            android:layout_marginEnd="@dimen/dimen_16"
            android:layout_marginLeft="@dimen/dimen_16"
            android:layout_marginRight="@dimen/dimen_16"
            android:layout_marginStart="@dimen/dimen_16"
            android:gravity="center_horizontal"
            android:text="@string/str_otp_msg"
            android:textSize="@dimen/font_18"
            app:layout_constraintBottom_toTopOf="@+id/cardView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            style="@style/AppTheme.Widget.CardView.Compat"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="@dimen/dimen_4"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/phoneNumContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/countryCode"
                        style="@style/AppTheme.Widget.TextView.Primary.Bold"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_16"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:background="?android:attr/selectableItemBackground"
                        android:drawableEnd="@drawable/vc_down_cheveron_grey"
                        android:drawablePadding="@dimen/dimen_4"
                        android:drawableRight="@drawable/vc_down_cheveron_grey"
                        android:minHeight="@dimen/dimen_48"
                        android:onClick="@{() -> onClickCallBack.onClickCountryCode()}"
                        android:text="@{viewModel.countryCode}"
                        android:textSize="@dimen/font_16"
                        tools:text="+91" />


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/phoneNumInputLayout"
                        style="@style/AppTheme.TextInputLayout.First.Child"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dimen_16"
                        android:layout_marginRight="@dimen/dimen_16"
                        android:layout_toEndOf="@id/countryCode"
                        android:layout_toRightOf="@id/countryCode"
                        app:errorEnabled="true"
                        bind:textInputLayoutErrorBinding="@{viewModel.phoneError}">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/phoneNumEditText"
                            style="@style/AppTheme.EditText"
                            android:hint="@string/str_mobile_num"
                            android:inputType="number"
                            android:maxLength="15"
                            android:maxLines="1"
                            android:minEms="10"
                            android:text="@{viewModel.mobileNumber}"
                            app:addTextChangedListener="@{onTextChangeCallBack}" />

                    </android.support.design.widget.TextInputLayout>


                </RelativeLayout>


                <Button
                    android:id="@+id/next_button"
                    style="@style/AppTheme.Button.Raised"
                    android:layout_below="@id/phoneNumInputLayout"
                    android:background="@{viewModel.enableNxtBtn ? @drawable/btn_color_accent : @drawable/btn_color_disabled}"
                    android:clickable="@{viewModel.enableNxtBtn}"
                    android:onClick="@{() -> onClickCallBack.onClickNext()}"
                    android:text="@string/str_next" />


            </LinearLayout>


        </android.support.v7.widget.CardView>


    </android.support.constraint.ConstraintLayout>
</layout>