<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">@dimen/dimen_6</item>
    </style>

    <style name="AppTheme.Widget.TextView.Primary.Regular" parent="AppTheme.TextView">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="AppTheme.Widget.TextView.Primary.Bold" parent="AppTheme.TextView">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Widget.TextView.Secondary.Regular" parent="AppTheme.TextView">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="AppTheme.Widget.TextView.Secondary.Bold" parent="AppTheme.TextView">
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="AppTheme.Widget.TextView.Primary.Bold.White" parent="AppTheme.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Widget.TextView.Error" parent="AppTheme.TextView">
        <item name="android:textColor">@color/faded_red</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CollapsingTextAppearance" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title"/>
    <style name="CollapsingTextAppearance.Inverse" >
        <item name="android:textSize">30sp</item>
    </style>

</resources>