<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Base.AppTheme" >
        <item name="android:textColorPrimary">@color/primary_text</item>
    </style>

    <style name="AppTheme.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar.Overflow</item>
    </style>

    <style name="ThemeOverlay.AppCompat.Dark.ActionBar.Overflow" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:itemBackground">@drawable/btn_color_white_full</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Widget" />


    <style name="AppTheme.Widget.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dimen_8</item>
        <item name="cardCornerRadius">@dimen/dimen_2</item>
        <item name="cardElevation">@dimen/dimen_2</item>
        <item name="android:layout_margin">@dimen/dimen_8</item>
    </style>

    <style name="AppTheme.Widget.CardView.Full">
        <item name="cardUseCompatPadding">false</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="android:padding">@null</item>
        <item name="cardCornerRadius">@null</item>
        <item name="android:layout_margin">@null</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_8</item>
    </style>


    <style name="AppTheme.Widget.CardView.Compat" parent="AppTheme.Widget.CardView">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardCornerRadius">@dimen/dimen_4</item>
        <item name="android:layout_margin">@dimen/dimen_16</item>
    </style>

    <style name="AppTheme.ImageView">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginLeft">@dimen/dimen_16</item>
        <item name="android:layout_marginRight">@dimen/dimen_16</item>
    </style>

    <style name="AppTheme.ImageView.icon_96" parent="AppTheme.ImageView">
        <item name="android:layout_width">@dimen/dimen_96</item>
        <item name="android:layout_height">@dimen/dimen_96</item>
    </style>

    <style name="AppTheme.ImageView.icon_48" parent="AppTheme.ImageView">
        <item name="android:layout_width">@dimen/dimen_48</item>
        <item name="android:layout_height">@dimen/dimen_48</item>
    </style>

</resources>
