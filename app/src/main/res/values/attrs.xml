<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MultiStateView">
        <attr name="msv_loadingView" format="reference" />
        <attr name="msv_emptyView" format="reference" />
        <attr name="msv_errorView" format="reference" />
        <attr name="msv_viewState" format="enum">
            <enum name="content" value="0" />
            <enum name="apiError" value="1" />
            <enum name="empty" value="2" />
            <enum name="loading" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SnackbarStyle">
        <attr name="android:textColor"/>
        <attr name="android:background"/>
    </declare-styleable>


    <declare-styleable name="EasyCoordinatorView">
        <attr name="dependsOn" format="reference"/>
        <attr name="dependType">
            <enum name="height" value="0"/>
            <enum name="width" value="1"/>
            <enum name="x" value="2"/>
            <enum name="y" value="3"/>
        </attr>

        <attr name="dependTargetX" format="dimension"/>
        <attr name="dependTargetY" format="dimension"/>
        <attr name="dependTargetWidth" format="dimension"/>
        <attr name="dependTargetHeight" format="dimension"/>

        <attr name="targetX" format="dimension"/>
        <attr name="targetY" format="dimension"/>
        <attr name="targetWidth" format="dimension"/>
        <attr name="targetHeight" format="dimension"/>
        <attr name="targetBackgroundColor" format="color"/>
        <attr name="targetAlpha" format="float"/>
        <attr name="targetRotateX" format="float"/>
        <attr name="targetRotateY" format="float"/>

        <attr name="animation" format="reference"/>

    </declare-styleable>

    <declare-styleable name="DateTimePickerEditText">
        <attr name="dateFormat" format="string"/>
        <attr name="timeFormat" format="string"/>
        <attr name="minDate" format="string"/>
        <attr name="maxDate" format="string"/>
        <attr name="is24HourView" format="boolean"/>
        <attr name="theme" format="reference"/>
    </declare-styleable>

    <declare-styleable name="PinViewTheme">
        <attr name="pinViewStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="PinView">
        <attr name="itemCount" format="integer" />
        <!-- {@deprecated Use itemWidth or itemHeight instead.} -->
        <attr name="itemSize" format="dimension" />
        <attr name="itemWidth" format="dimension" />
        <attr name="itemHeight" format="dimension" />
        <attr name="itemRadius" format="dimension" />
        <attr name="itemSpacing" format="dimension" />
        <!-- {@deprecated Use lineWidth instead.} -->
        <attr name="borderWidth" format="dimension" />
        <!-- {@deprecated Use lineColor instead.} -->
        <attr name="borderColor" format="reference|color" />
        <attr name="lineWidth" format="dimension" />
        <attr name="lineColor" format="reference|color" />
        <attr name="viewType" format="enum">
            <enum name="rectangle" value="0" />
            <enum name="line" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="InkPageIndicator">
        <attr name="dotDiameter" format="dimension" />
        <attr name="dotGap" format="dimension" />
        <attr name="animationDuration" format="integer" />
        <attr name="pageIndicatorColor" format="color" />
        <attr name="currentPageIndicatorColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ZoomTabViewPager">
        <attr name="hvTextSize"  type="integer" format="dimension" />
        <attr name="hvTextColor"  type="integer" format="color" />
        <attr name="hvTextColorActiveTab"  type="integer" format="color" />
        <attr name="hvTextAlpha"  type="integer" format="float" />
        <attr name="hvTextAlphaActiveTab"  type="integer" format="float" />
        <attr name="hvTextScale"  type="integer" format="float" />
        <attr name="hvTextScaleActiveTab" type="integer" format="float" />
        <attr name="hvPadding" type="integer" format="dimension" />
    </declare-styleable>


    <attr name="colorText" format="reference|color" />
    <attr name="colorSubText" format="reference|color" />
    <attr name="colorTextReverse" format="reference|color" />
    <attr name="colorSubTextReverse" format="reference|color" />
    <attr name="colorTextHint" format="reference|color" />
    <attr name="colorNegative" format="reference|color" />
    <attr name="colorBodyLink" format="reference|color" />
    <attr name="colorErrorState" format="reference|color" />
    <attr name="colorSuccessState" format="reference|color" />
    <attr name="colorLine" format="reference|color" />
    <attr name="colorButtonTransparentHighlight" format="reference|color" />
    <attr name="colorWindowBackGround" format="reference|color" />

    <attr name="colorButton" format="reference|color" />
    <attr name="colorButtonDisabled" format="reference|color" />
    <attr name="colorButtonPressed" format="reference|color" />
    <attr name="colorButtonNegative" format="reference|color" />
    <attr name="colorButtonNegativePressed" format="reference|color" />
    <attr name="colorButtonSolid" format="reference|color" />

</resources>