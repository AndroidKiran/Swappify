<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MultiStateView">
        <attr name="msv_loadingView" format="reference" />
        <attr name="msv_emptyView" format="reference" />
        <attr name="msv_errorView" format="reference" />
        <attr name="msv_viewState" format="enum">
            <enum name="content" value="0" />
            <enum name="error" value="1" />
            <enum name="empty" value="2" />
            <enum name="loading" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SnackbarStyle">
        <attr name="android:textColor"/>
        <attr name="android:background"/>
    </declare-styleable>


    <declare-styleable name="EasyCoordinatorView">
        <attr name="dependsOn" format="reference"/>
        <attr name="dependType">
            <enum name="height" value="0"/>
            <enum name="width" value="1"/>
            <enum name="x" value="2"/>
            <enum name="y" value="3"/>
        </attr>

        <attr name="dependTargetX" format="dimension"/>
        <attr name="dependTargetY" format="dimension"/>
        <attr name="dependTargetWidth" format="dimension"/>
        <attr name="dependTargetHeight" format="dimension"/>

        <attr name="targetX" format="dimension"/>
        <attr name="targetY" format="dimension"/>
        <attr name="targetWidth" format="dimension"/>
        <attr name="targetHeight" format="dimension"/>
        <attr name="targetBackgroundColor" format="color"/>
        <attr name="targetAlpha" format="float"/>
        <attr name="targetRotateX" format="float"/>
        <attr name="targetRotateY" format="float"/>

        <attr name="animation" format="reference"/>

    </declare-styleable>

</resources>